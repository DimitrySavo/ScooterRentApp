<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ScooterRentApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ScooterRentApp" parent="Base.Theme.ScooterRentApp" />

    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="customOutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/outlined_color_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:textColorHint">@color/textGrey</item>
    </style>

    <style name="filledButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:letterSpacing">0.2</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="transparentButtonStyle" parent="filledButtonStyle">
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="upperTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>